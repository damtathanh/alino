            <div>
                <h2 className="text-xl font-semibold mb-1">B·∫£o m·∫≠t</h2>
                <p className="text-sm text-gray-500">
                    Qu·∫£n l√Ω ph∆∞∆°ng th·ª©c ƒëƒÉng nh·∫≠p v√† m·∫≠t kh·∫©u.
                </p>
            </div>

            <div className="border border-gray-200 rounded-2xl p-6 space-y-4">
                <p className="text-sm text-gray-500">
                    {hasPassword
                        ? 'B·∫°n c√≥ th·ªÉ thay ƒë·ªïi m·∫≠t kh·∫©u t·∫°i ƒë√¢y.'
                        : 'T√†i kho·∫£n c·ªßa b·∫°n ƒë∆∞·ª£c t·∫°o b·∫±ng Google. H√£y thi·∫øt l·∫≠p m·∫≠t kh·∫©u ƒë·ªÉ ƒëƒÉng nh·∫≠p b·∫±ng email.'}
                </p>

                {hasPassword && (
                    <input
                        type="password"
                        placeholder="M·∫≠t kh·∫©u hi·ªán t·∫°i"
                        value={currentPassword}
                        onChange={e => setCurrentPassword(e.target.value)}
                        className="input"
                    />
                )}

                <input
                    type="password"
                    placeholder="M·∫≠t kh·∫©u m·ªõi"
