            });

            if (authError) {
                setError('M·∫≠t kh·∫©u hi·ªán t·∫°i kh√¥ng ƒë√∫ng');
                return;
            }

            const { error } = await supabase.auth.updateUser({
                password: newPassword,
            });

            await supabase
                .from('profiles')
                .update({ has_password: true })
                .eq('id', session!.user.id);

            if (error) {
                if (error.message.includes('different from the old password')) {
                    setError('M·∫≠t kh·∫©u m·ªõi ph·∫£i kh√°c m·∫≠t kh·∫©u c≈©');
                } else {
                    setError('Kh√¥ng th·ªÉ c·∫≠p nh·∫≠t m·∫≠t kh·∫©u. Vui l√≤ng th·ª≠ l·∫°i.');
                }
                return;
            }

            setShowToast(true);
            setCurrentPassword('');
            setNewPassword('');
            setConfirmPassword('');
        } finally {
            setLoading(false);
        }
    };

    return (
        <div className="space-y-6 max-w-xl">
            {showToast && (
                <Toast
                    message="C·∫≠p nh·∫≠t m·∫≠t kh·∫©u th√†nh c√¥ng"
                    onClose={() => setShowToast(false)}
                />
