     * Có session thì KHÔNG ở lại /login
     * → đẩy sang /app để AppGate xử lý role + onboarding
     */
    useEffect(() => {
        if (session) {
            navigate(ROUTES.APP, { replace: true });
        }
    }, [session, navigate]);

