    title,
    subtitle,
    onSignupClick,
    customContent,
}: AuthWrapperProps) => {
    const { session } = useAuth();
    const navigate = useNavigate();

    const [errorMsg, setErrorMsg] = useState('');
    const [loadingGoogle, setLoadingGoogle] = useState(false);

    /**
