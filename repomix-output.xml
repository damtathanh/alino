                <HowItWorks />
                <div className="bg-gray-50/50">
                    <Features />
                </div>
                <Audience onSignupClick={handleSignup} />
                <PricingUnlock onSignupClick={() => navigate(ROUTES.SIGNUP)} />
                <FAQ />
            </main>

            <Footer />
        </div>
    );
};

export default Landing;
